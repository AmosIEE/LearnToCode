.head-nav {
    height: 26px;
}
.nav-item {
    display: inline-block;
    text-align: center;
    width: 50%;
    padding: 2px 10px;
}
.nav-text {
    font-size: 12px;
    padding: 5px 7px;
    
}
.nav-text.active {
    border-bottom: 1px solid #000
}

.content {
    height: 554px;
    position: absolute;
}


.carousel {
    width: 100%;
    height: 150px;
    background: #000;
}

.carousel-item {
    width: 100%;
    height: 100%;
}

.item {
    width:650px;
    height: 100%;
}

.recommandButtons {
    padding: 15px 3px;
    border-bottom: 0.5px solid #e1e1e1 
}

.buttonContainer {
    font-size: 12px;
    width:123px;
    text-align: center
}

.fm {
    background-image: url("../../Image/fm.png");
    background-position: center;
    background-size: 20px 20px;
    background-repeat: no-repeat;
}

.topList {
    background-image: url("../../Image/topList.png");
    background-position: center;
    background-size: 20px 20px;
    background-repeat: no-repeat;
}

.recommandButton {
    width: 46px;
    height: 46px;
    border-radius: 23px;
    margin-bottom: 8px;
    border: 2px solid #353535;
    text-align: center;
    padding: 0 ;
}
.block {
    font-size: 14px;
    padding: 20px 10px;
    line-height: 16px;
}

.blockTitleImage {
    width: 16px;
    height: 16px;
    margin-right: 2px;
}

.blockMore {
    float: right;
    font-size: 10px;
}

.blockItem {
    margin-top: 10px;
    width: 24%;
    height: 95px;
    margin-right: 1%;
    font-size: 12px;
    
}

.blockImage {
    width: 100%;
    height: 83px;
}

.blockText {
    overflow : hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}


.contentContainer {
    height: 554px;
